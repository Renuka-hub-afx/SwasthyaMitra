{
    "rules": {
        "users": {
            "$uid": {
                // Only the owner can read or write their own user node
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid",
                // Specific validation for critical nodes if needed
                "profile": {
                    ".validate": "newData.hasChildren(['name', 'email'])"
                },
                "fitnessData": {
                    ".validate": "newData.hasChildren(['streak', 'lastActiveDate'])"
                }
            }
        },
        "challenges": {
            // Any authenticated user can read existing challenges or create new ones
            ".read": "auth != null",
            ".write": "auth != null",
            "$challengeId": {
                // Allow participants to read specific challenge details
                ".read": "auth != null",
                // Only allow creators to delete or modify the whole challenge, 
                // but allow participants to join themselves
                ".write": "auth != null"
            }
        },
        "foodDatabase": {
            // Global read access for authenticated users, no one can write via app
            ".read": "auth != null",
            ".write": false
        },
        "completionHistory": {
            // Supporting legacy top-level reference if some modules use it
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid"
            }
        }
    }
}