{
    "rules": {
        "users": {
            "$uid": {
                ".read": "$uid === auth.uid",
                ".write": "$uid === auth.uid",
                "profile": {
                    ".validate": "newData.hasChildren(['name', 'email'])"
                },
                "fitnessData": {
                    "completionHistory": {
                        "$date": {
                            ".validate": "newData.isBoolean()"
                        }
                    }
                },
                "completionHistory": {
                    "$date": {
                        ".validate": "newData.isBoolean()"
                    }
                },
                "foodLogs": {
                    "$logId": {
                        ".validate": "newData.hasChildren(['foodName', 'calories', 'timestamp'])"
                    }
                }
            }
        },
        "challenges": {
            ".read": "auth != null",
            ".write": "auth != null"
        },
        "foodDatabase": {
            ".read": "auth != null",
            ".write": false
        }
    }
}