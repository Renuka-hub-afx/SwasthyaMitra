            android:screenOrientation="portrait" />

        <activity
            android:name=".CoachActivity"
            android:exported="false" />

        <activity
            android:name=".SleepTrackerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />


        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".FoodLogActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ExerciseLogActivity"
            android:exported="false"
            android:screenOrientation="portrait" />

        <activity
            android:name=".BarcodeScannerActivity"
            android:exported="false"
            android:screenOrientation="portrait" />


        <activity
            android:name=".LifestyleActivity"
            android:exported="false" />

        <activity
            android:name=".InsertGoalActivity"
            android:exported="false" />

        <activity
            android:name=".UserInfoActivity"
