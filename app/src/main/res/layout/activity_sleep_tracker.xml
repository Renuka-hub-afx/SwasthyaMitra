<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:elevation="4dp"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Back"
                android:src="@drawable/ic_back"
                app:tint="#FFFFFF"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sleep Tracker"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="ðŸ˜´ Track your sleep quality"
                    android:textColor="#E3F2FD"
                    android:textSize="13sp" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Progress Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOUR PROGRESS"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <ProgressBar
                        android:id="@+id/progress_sleep"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="12dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/circular_progress_bar"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/7 nights tracked"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_total_nights"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#7B2CBF"
                                android:textSize="32sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nights"
                                android:textColor="#666666"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_avg_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0h"
                                android:textColor="#4CAF50"
                                android:textSize="32sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Avg Duration"
                                android:textColor="#666666"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_good_nights"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0/7"
                                android:textColor="#FF9800"
                                android:textSize="32sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Good Nights"
                                android:textColor="#666666"
                                android:textSize="12sp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_stage_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Track 7 nights to become a Sleep Saint"
                        android:textColor="#7B2CBF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:layout_gravity="center"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Quick Log Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš¡ QUICK LOG"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Log last night's sleep quickly"
                        android:textColor="#666666"
                        android:textSize="13sp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_quick_7_hours"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="7 Hours"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="@drawable/button_background"
                            app:backgroundTint="@null"
                            app:cornerRadius="16dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_quick_8_hours"
                            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="8 Hours"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:background="@drawable/button_background"
                            app:backgroundTint="@null"
                            app:cornerRadius="16dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Manual Log Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ DETAILED LOG"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"/>

                    <!-- Sleep Time -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SLEEP TIME"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_sleep_time"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="SELECT TIME"
                        android:textColor="#7B2CBF"
                        app:strokeColor="#7B2CBF"
                        app:strokeWidth="2dp"
                        app:cornerRadius="12dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_sleep_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Time"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"/>

                    <!-- Wake Time -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WAKE TIME"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_select_wake_time"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="SELECT TIME"
                        android:textColor="#7B2CBF"
                        app:strokeColor="#7B2CBF"
                        app:strokeWidth="2dp"
                        app:cornerRadius="12dp"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/tv_wake_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Time"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"/>

                    <!-- Duration Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="#F5F5F5"
                        android:padding="16dp"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Duration:"
                            android:textColor="#666666"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 hours"
                            android:textColor="#4CAF50"
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_quality_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FF9800"
                        android:textSize="13sp"
                        android:layout_marginBottom="16dp"/>

                    <!-- Quality Rating -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SLEEP QUALITY"
                        android:textColor="#999999"
                        android:textSize="11sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <com.google.android.material.chip.ChipGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        android:layout_marginBottom="20dp">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_poor"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜« Poor"
                            app:chipBackgroundColor="@color/white"
                            app:chipStrokeColor="#F44336"
                            app:chipStrokeWidth="2dp"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_fair"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜´ Fair"
                            app:chipBackgroundColor="@color/white"
                            app:chipStrokeColor="#FF9800"
                            app:chipStrokeWidth="2dp"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_good"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ˜Š Good"
                            android:checked="true"
                            app:chipBackgroundColor="@color/white"
                            app:chipStrokeColor="#4CAF50"
                            app:chipStrokeWidth="2dp"/>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_excellent"
                            style="@style/Widget.MaterialComponents.Chip.Choice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒŸ Excellent"
                            app:chipBackgroundColor="@color/white"
                            app:chipStrokeColor="#7B2CBF"
                            app:chipStrokeWidth="2dp"/>
                    </com.google.android.material.chip.ChipGroup>

                    <!-- Log Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_log_sleep"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="LOG SLEEP ðŸ’¤"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:background="@drawable/button_background"
                        app:backgroundTint="@null"
                        app:cornerRadius="16dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tips Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F3E5F5"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ SLEEP TIPS"
                        android:textColor="#7B2CBF"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â€¢ Aim for 7-9 hours per night\nâ€¢ Go to bed at the same time\nâ€¢ Avoid screens 30 mins before bed\nâ€¢ Keep your room cool and dark\nâ€¢ Track consistently to unlock Sleep Saint!"
                        android:textColor="#6A1B9A"
                        android:textSize="13sp"
                        android:lineSpacingMultiplier="1.3"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>

