<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3ABC3">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#121212"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="AI Smart Diet Plan"
            android:textColor="#121212"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/tvDailyTip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/tip_light_bg"
                android:padding="16dp"
                android:lineSpacingExtra="4dp"
                android:text="ðŸ’¡ Tip: Get your personalized Indian diet plan based on nutrition science."
                android:textColor="#333333"
                android:textSize="14sp" />

            <!-- Metabolic Status Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#F3E5F5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/tvMetabolicStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Metabolic Status: Normal"
                        android:textColor="#7B1FA2"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/tvIntensityAlert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Intensity: Normal"
                        android:textColor="#666666"
                        android:layout_marginTop="4dp"
                        android:textSize="13sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Breakfast -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="BREAKFAST"
                android:textColor="#666666"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBreakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvBreakfastName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not generated yet"
                                android:textColor="#121212"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvBreakfastDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="-- kcal | -- protein"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnGenerateBreakfast"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/button_background"
                            android:text="GENERATE"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutBreakfastActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnBreakfastAte"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_background"
                            android:text="âœ” Ate"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnBreakfastSkipped"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_background"
                            android:text="âŒ Skip"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnBreakfastRegenerate"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/button_background"
                            android:text="ðŸ” New"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Lunch -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="LUNCH"
                android:textColor="#666666"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardLunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLunchName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not generated yet"
                                android:textColor="#121212"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvLunchDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="-- kcal | -- protein"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnGenerateLunch"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/button_background"
                            android:text="GENERATE"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutLunchActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnLunchAte"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_background"
                            android:text="âœ” Ate"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnLunchSkipped"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_background"
                            android:text="âŒ Skip"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnLunchRegenerate"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/button_background"
                            android:text="ðŸ” New"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Dinner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="DINNER"
                android:textColor="#666666"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardDinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDinnerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not generated yet"
                                android:textColor="#121212"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDinnerDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="-- kcal | -- protein"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnGenerateDinner"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/button_background"
                            android:text="GENERATE"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutDinnerActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnDinnerAte"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_background"
                            android:text="âœ” Ate"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnDinnerSkipped"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_background"
                            android:text="âŒ Skip"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnDinnerRegenerate"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/button_background"
                            android:text="ðŸ” New"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Snacks -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="SNACKS"
                android:textColor="#666666"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSnacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSnacksName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not generated yet"
                                android:textColor="#121212"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSnacksDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="-- kcal | -- protein"
                                android:textColor="#666666" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnGenerateSnack"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/button_background"
                            android:text="GENERATE"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutSnacksActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnSnacksAte"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_background"
                            android:text="âœ” Ate"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnSnacksSkipped"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_background"
                            android:text="âŒ Skip"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnSnacksRegenerate"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/button_background"
                            android:text="ðŸ” New"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- WhatsApp Share Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_menu_share"
        app:backgroundTint="#25D366"
        app:tint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/fabMode"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Floating Moon Button (Existing) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:src="@android:drawable/ic_menu_recent_history"
        app:backgroundTint="#FFFFFF"
        app:tint="#121212"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>