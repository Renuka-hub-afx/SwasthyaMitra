                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_placeholder_food"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvDinnerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not generated yet"
                                android:textColor="#121212"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvDinnerDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="-- kcal | -- protein"
                                android:textColor="#888888"
                                android:textSize="13sp"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnGenerateDinner"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:background="@drawable/bg_button_gradient"
                            android:text="GENERATE"
                            android:textColor="#FFFFFF"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="20dp"
                            app:backgroundTint="@null" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutDinnerActions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/btnDinnerAte"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_background"
                            android:text="âœ” Ate"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnDinnerSkipped"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/button_background"
                            android:text="âŒ Skip"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />

                        <Button
                            android:id="@+id/btnDinnerRegenerate"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/button_background"
                            android:text="ðŸ” New"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:backgroundTint="@null" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Snacks -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="SNACKS"
                android:textColor="#888888"
                android:textSize="12sp"
                android:letterSpacing="0.1"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardSnacks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/ic_placeholder_food"
                            android:layout_marginEnd="16dp"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvSnacksName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not generated yet"
                                android:textColor="#121212"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvSnacksDetails"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
