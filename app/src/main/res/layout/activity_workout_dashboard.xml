<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_main">

    <!-- Header (Matches Food Log) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBackWorkout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back_arrow"
                app:tint="#FFFFFF"
                android:scaleType="centerInside"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Workout &amp; Activity"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Spacer to balance title -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Today"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Live Steps Card (White Style) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LIVE STEPS"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvStepsWorkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#4CAF50"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvCaloriesBurned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 kcal burned"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- AI Exercise Recommendation Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAiExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white">

                    <!-- Header with Gradient/Color -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E8F5E9"
                        android:padding="16dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ§˜ Recommended for You"
                            android:textStyle="bold"
                            android:textColor="#2E7D32"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvAiExerciseName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#333333"
                            android:layout_marginBottom="8dp"/>

                        <!-- GIF / Image -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="0dp"
                            android:layout_marginBottom="12dp">
                            <ImageView
                                android:id="@+id/ivAiExerciseGif"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_workout_placeholder"
                                android:background="#F5F5F5"/>
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/tvAiExerciseReason"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reason..."
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:lineSpacingMultiplier="1.2"
                            android:layout_marginBottom="16dp"/>

                        <!-- Stats Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:id="@+id/tvAiExerciseCalories"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="ðŸ”¥ ~ kcal"
                                android:textStyle="bold"
                                android:textColor="#E64A19"/>

                            <TextView
                                android:id="@+id/tvAiExerciseDuration"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="â±ï¸ min"
                                android:textStyle="bold"
                                android:textColor="@color/purple_500"
                                android:gravity="end"/>
                        </LinearLayout>

                        <!-- Counter Text -->
                        <TextView
                            android:id="@+id/tvExerciseCounter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Exercise 1 of 3"
                            android:gravity="center"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:layout_marginBottom="12dp"/>
                        
                        <!-- Actions Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <!-- Skip / Next Button -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAiExerciseSkip"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.8"
                                android:text="Skip â­ï¸"
                                android:textColor="@color/gray_600"
                                app:strokeColor="@color/purple_500"
                                android:layout_marginEnd="8dp"/>

                            <!-- Done Button with app gradient -->
                            <Button
                                android:id="@+id/btnAiExerciseDone"
                                android:layout_width="0dp"
                                android:layout_height="48dp"
                                android:layout_weight="1.2"
                                android:text="Mark as Done âœ…"
                                android:background="@drawable/button_background"
                                app:backgroundTint="@null"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="14sp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Video Recommendations List -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECOMMENDED FOR YOU"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="#999999"
                android:letterSpacing="0.1"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:id="@+id/llVideoListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">
                <!-- Items will be added here dynamically -->
            </LinearLayout>

            <!-- Workout Stats Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOUR PROGRESS"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- Total Workouts -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tvTotalWorkouts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#333333"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <!-- Streak -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tvWorkoutStreak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#FB8C00"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Streak"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <!-- Minutes -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tvTotalMinutes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#7B2CBF"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Minutes"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Modules (Buttons) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tools &amp; Modules"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <!-- Gamification -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cvGamification"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="ðŸ†\n\nLEADER\nBOARD"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingVertical="16dp"
                    android:background="@drawable/button_background"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp"/>

                <!-- Insights -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cvInsights"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="ðŸ“Š\n\nWORKOUT\nINSIGHTS"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingVertical="16dp"
                    android:background="@drawable/button_background"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Safety -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cvSafety"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘» GHOST MODE"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingVertical="16dp"
                    android:background="@drawable/button_background"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
