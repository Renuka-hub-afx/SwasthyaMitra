<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_main">

    <!-- Header (Matches Food Log) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBackWorkout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back_arrow"
                app:tint="#FFFFFF"
                android:scaleType="centerInside"
                android:padding="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Workout &amp; Activity"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <!-- Spacer to balance title -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Today"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Live Steps Card (White Style) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LIVE STEPS"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvStepsWorkout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#4CAF50"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tvCaloriesBurned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 kcal burned"
                        android:textColor="#666666"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAiExerciseRecommendation"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="AI Exercise ðŸ¤–"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorPrimary"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_ai"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnManualExercise"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="Manual Log âœï¸"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/colorAccent"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_edit"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <!-- AI Exercise Recommendation Card - ENHANCED DESIGN -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAiExercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/white">

                        <!-- Header with Gradient -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_background"
                            android:padding="16dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Your Personalized Exercise Today ðŸ’ª"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"/>
                        </LinearLayout>

                        <!-- Large GIF / Image -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            app:cardCornerRadius="0dp"
                            app:cardElevation="0dp">
                            <ImageView
                                android:id="@+id/ivAiExerciseGif"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_workout_placeholder"
                                android:background="#F5F5F5"/>
                        </androidx.cardview.widget.CardView>

                        <!-- Content Container -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <!-- Exercise Counter -->
                            <TextView
                                android:id="@+id/tvExerciseCounter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Exercise 1 of 3"
                                android:textSize="12sp"
                                android:textColor="#999999"
                                android:layout_marginBottom="8dp"/>

                            <!-- Exercise Name (Title Style) -->
                            <TextView
                                android:id="@+id/tvAiExerciseName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cat (Yoga Pose / Stretching)"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#E91E63"
                                android:layout_marginBottom="8dp"/>

                            <!-- Target Info -->
                            <TextView
                                android:id="@+id/tvAiExerciseTarget"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Target: Abs"
                                android:textSize="14sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="12dp"/>

                            <!-- Stats Row (Compact) -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:id="@+id/tvAiExerciseCalories"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ðŸ”¥ ~10 kcal"
                                    android:textSize="14sp"
                                    android:textColor="#666666"/>

                                <TextView
                                    android:id="@+id/tvAiExerciseDuration"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="â±ï¸ 5 mins"
                                    android:textSize="14sp"
                                    android:textColor="#666666"/>
                            </LinearLayout>

                            <!-- Simple Description -->
                            <TextView
                                android:id="@+id/tvAiExerciseReason"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Gentle stretching to ease tension and prepare the body for movement."
                                android:textSize="14sp"
                                android:textColor="#555555"
                                android:lineSpacingMultiplier="1.3"
                                android:layout_marginBottom="12dp"/>

                            <!-- Age Insight -->
                            <LinearLayout
                                android:id="@+id/layoutAgeInsight"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="#FFF8E1"
                                android:padding="12dp"
                                android:layout_marginBottom="8dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tvAiExerciseAgeExplanation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’¡ Age Insight: Suitable for all ages."
                                    android:textSize="13sp"
                                    android:textColor="#F57C00"
                                    android:lineSpacingMultiplier="1.2"/>
                            </LinearLayout>

                            <!-- For You (Gender) -->
                            <LinearLayout
                                android:id="@+id/layoutGenderNote"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="#FCE4EC"
                                android:padding="12dp"
                                android:layout_marginBottom="8dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/tvAiExerciseGenderNote"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="âœ¨ For You: Beneficial for both men and women."
                                    android:textSize="13sp"
                                    android:textColor="#C2185B"
                                    android:lineSpacingMultiplier="1.2"/>
                            </LinearLayout>

                            <!-- PRO TIPS Section -->
                            <LinearLayout
                                android:id="@+id/layoutProTips"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="#E8F5E9"
                                android:padding="12dp"
                                android:layout_marginBottom="8dp"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="âœ… PRO TIPS:"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#2E7D32"
                                    android:layout_marginBottom="4dp"/>

                                <LinearLayout
                                    android:id="@+id/llTips"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <!-- Tips added dynamically -->
                                </LinearLayout>
                            </LinearLayout>

                            <!-- AVOID MISTAKES Section -->
                            <LinearLayout
                                android:id="@+id/layoutAvoidMistakes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="#FFEBEE"
                                android:padding="12dp"
                                android:layout_marginBottom="12dp"
                                android:visibility="visible">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="âš ï¸ AVOID THESE MISTAKES:"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:textColor="#C62828"
                                    android:layout_marginBottom="4dp"/>

                                <LinearLayout
                                    android:id="@+id/llCommonMistakes"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <!-- Mistakes added dynamically -->
                                </LinearLayout>
                            </LinearLayout>

                            <!-- Motivational Message (Only for Period Mode) -->
                            <LinearLayout
                                android:id="@+id/layoutMotivation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:background="#F3E5F5"
                                android:padding="12dp"
                                android:layout_marginBottom="12dp"
                                android:visibility="gone">

                                <TextView
                                    android:id="@+id/tvAiExerciseMotivation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸ’• Stretch like a kitty cat! Feel your spine wake up."
                                    android:textSize="14sp"
                                    android:textStyle="italic"
                                    android:textColor="#7B1FA2"
                                    android:lineSpacingMultiplier="1.2"/>
                            </LinearLayout>

                            <!-- Hidden sections -->
                            <TextView
                                android:id="@+id/tvAiExerciseEquipment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <TextView
                                android:id="@+id/tvAiExerciseGoalAlignment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"/>

                            <!-- Instructions Section (Hidden) -->
                            <LinearLayout
                                android:id="@+id/llInstructions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">
                                <!-- Instructions added dynamically -->
                            </LinearLayout>

                            <!-- Counter Text -->
                            <TextView
                                android:id="@+id/tvExerciseCounterBottom"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Exercise 1 of 3"
                                android:gravity="center"
                                android:textColor="#888888"
                                android:textSize="13sp"
                                android:layout_marginBottom="16dp"/>
                            
                            <!-- Actions Row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <!-- Maybe Later Button -->
                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnAiExerciseSkip"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                    android:layout_width="0dp"
                                    android:layout_height="56dp"
                                    android:layout_weight="0.9"
                                    android:text="MAYBE LATER"
                                    android:textColor="@color/gray_600"
                                    android:textSize="13sp"
                                    app:strokeColor="@color/purple_500"
                                    app:strokeWidth="2dp"
                                    app:cornerRadius="12dp"
                                    android:layout_marginEnd="8dp"/>

                                <!-- I DID IT Button with Gradient -->
                                <Button
                                    android:id="@+id/btnAiExerciseDone"
                                    android:layout_width="0dp"
                                    android:layout_height="56dp"
                                    android:layout_weight="1.1"
                                    android:text="I DID IT! ðŸ’ª"
                                    android:background="@drawable/button_background"
                                    app:backgroundTint="@null"
                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="15sp"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>
            </androidx.cardview.widget.CardView>




            <!-- Workout Stats Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YOUR PROGRESS"
                        android:textSize="11sp"
                        android:textColor="#999999"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <!-- Total Workouts -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tvTotalWorkouts"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#333333"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <!-- Streak -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tvWorkoutStreak"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#FB8C00"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Streak"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                        </LinearLayout>

                        <!-- Minutes -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tvTotalMinutes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#7B2CBF"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Minutes"
                                android:textSize="12sp"
                                android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Modules (Buttons) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tools &amp; Modules"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <!-- Gamification -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cvGamification"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="ðŸ†\n\nLEADER\nBOARD"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingVertical="16dp"
                    android:background="@drawable/button_background"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp"/>

                <!-- Insights -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cvInsights"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="ðŸ“Š\n\nWORKOUT\nINSIGHTS"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingVertical="16dp"
                    android:background="@drawable/button_background"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Safety -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cvSafety"
                    style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘» GHOST MODE"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:paddingVertical="16dp"
                    android:background="@drawable/button_background"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
