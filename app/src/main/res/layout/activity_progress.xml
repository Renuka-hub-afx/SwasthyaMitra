<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFF"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <!-- Top Navigation -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_back_pink"
            app:title="Refined Progress"
            app:titleTextAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:titleTextColor="#333366" />

        <!-- Hero Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/heroCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:strokeWidth="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Simple decorative shape background would go here if using custom view, 
                     using a simple circle for design match -->
                <View
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_circle_soft_pink"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="-20dp"
                    android:layout_marginTop="-20dp" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/iconContainer"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:backgroundTint="@null">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_pink_purple" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_chart_white"
                        app:tint="@android:color/white" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/heroTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progress Dashboard"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A40"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/iconContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your fitness journey at a glance"
                    android:textSize="14sp"
                    android:textColor="#8888AA"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/heroTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Weekly Statistics Header -->
        <ImageView
            android:id="@+id/ivStatsIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_stats_purple"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/heroCard"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvStatsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weekly Statistics"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1A1A40"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/ivStatsIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivStatsIcon"
            app:layout_constraintStart_toEndOf="@id/ivStatsIcon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DETAILS"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#C04080"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toTopOf="@id/tvStatsTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvStatsTitle"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Stats Grid -->
        <LinearLayout
            android:id="@+id/statsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/tvStatsTitle">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CALORIES BURNED"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#AAAAC0"
                        android:letterSpacing="0.05" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/weeklyCaloriesText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,250"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FF4081" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" KCAL"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#AAAAC0"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="4dp" />
                    </LinearLayout>

                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="12dp"
                        android:progress="65"
                        android:progressDrawable="@drawable/custom_progress_pink" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SESSIONS"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#AAAAC0"
                        android:letterSpacing="0.05" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:id="@+id/weeklyWorkoutsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#7C4DFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" DONE"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#AAAAC0"
                            android:layout_marginStart="4dp"
                            android:layout_marginBottom="4dp" />
                    </LinearLayout>

                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="12dp"
                        android:progress="40"
                        android:progressDrawable="@drawable/custom_progress_purple" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Streaks Header -->
        <ImageView
            android:id="@+id/ivStreakIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_streak_pink"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/statsGrid"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvStreakTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Streaks"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#1A1A40"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/ivStreakIcon"
            app:layout_constraintBottom_toBottomOf="@id/ivStreakIcon"
            app:layout_constraintStart_toEndOf="@id/ivStreakIcon" />

        <!-- Streaks Grid -->
        <LinearLayout
            android:id="@+id/streaksGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="16dp"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@id/tvStreakTitle">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CURRENT"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#AAAAC0" />

                    <TextView
                        android:id="@+id/currentStreakText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 days"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#FF4081"
                        android:layout_marginTop="4dp" />

                    <!-- Pagination dots decoration -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <View android:layout_width="6dp" android:layout_height="6dp" android:background="@drawable/dot_active" />
                        <View android:layout_width="6dp" android:layout_height="6dp" android:layout_marginStart="4dp" android:background="@drawable/dot_active" />
                        <View android:layout_width="6dp" android:layout_height="6dp" android:layout_marginStart="4dp" android:background="@drawable/dot_active" />
                        <View android:layout_width="6dp" android:layout_height="6dp" android:layout_marginStart="4dp" android:background="@drawable/dot_inactive" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BEST"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#AAAAC0" />

                    <TextView
                        android:id="@+id/longestStreakText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14 days"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#7C4DFF"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERSONAL RECORD"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:textColor="#FF80AB"
                        android:layout_marginTop="6dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Roadmap Section -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/roadmapCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/streaksGrid">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Roadmap Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:backgroundTint="#FFF0F5">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_roadmap_pink" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progress Roadmap"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A40"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0FF" />

                <!-- Weight Progress Charts -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/roadmapItemWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvWeightTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weight Progress Charts"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333366"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Updated today"
                        android:textSize="12sp"
                        android:textColor="#AAAAEE"
                        app:layout_constraintTop_toBottomOf="@id/tvWeightTitle"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIVE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#C080B0"
                        android:background="@drawable/bg_active_badge"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0FF" android:layout_marginHorizontal="16dp" />

                <!-- Achievement Badges -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/roadmapItemBadges"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvBadgesTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Achievement Badges"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333366"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4 new earned"
                        android:textSize="12sp"
                        android:textColor="#AAAAEE"
                        app:layout_constraintTop_toBottomOf="@id/tvBadgesTitle"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIVE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#C080B0"
                        android:background="@drawable/bg_active_badge"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0FF" android:layout_marginHorizontal="16dp" />

                <!-- 30-Day History -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/roadmapItemHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:foreground="?attr/selectableItemBackground">

                    <TextView
                        android:id="@+id/tvHistoryTitleMain"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30-Day History"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#333366"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View complete logs"
                        android:textSize="12sp"
                        android:textColor="#AAAAEE"
                        app:layout_constraintTop_toBottomOf="@id/tvHistoryTitleMain"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIVE"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="#C080B0"
                        android:background="@drawable/bg_active_badge"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Analytics Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewDetailedReportButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="8dp"
            android:text="View Detailed Analytics"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:cornerRadius="16dp"
            app:elevation="4dp"
            app:icon="@drawable/ic_analytics_white"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            android:backgroundTint="@null"
            android:background="@drawable/gradient_pink_cta"
            app:layout_constraintTop_toBottomOf="@id/roadmapCard" />

        <!-- Daily History Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/historyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/viewDetailedReportButton">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/historyIconContainer"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    android:backgroundTint="#FFF0F5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_history_pink" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tvDailyHistoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily History Log"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A40"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="@id/historyIconContainer"
                    app:layout_constraintStart_toEndOf="@id/historyIconContainer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View all activities"
                    android:textSize="12sp"
                    android:textColor="#AAAAEE"
                    app:layout_constraintTop_toBottomOf="@id/tvDailyHistoryTitle"
                    app:layout_constraintStart_toStartOf="@id/tvDailyHistoryTitle" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_right_blue"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Functional RecyclerView (Kept but Hidden properly) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="20dp"
            android:nestedScrollingEnabled="false"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/historyCard"/>

        <TextView
            android:id="@+id/tv_history_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="No history logs found."
            android:textColor="#AAAACC"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/historyCard" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
