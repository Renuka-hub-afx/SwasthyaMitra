<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main">

    <!-- Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_arrow"
            android:padding="8dp"
            app:tint="#333333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Meal Plan"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#1A1A1A"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:background="@drawable/button_background"
            android:backgroundTint="#F0F0F0"
            android:padding="10dp"
            app:tint="#9C27B0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header_container"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingBottom="30dp">
            
            <!-- Date Strip -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:weightSum="5">

                <!-- Date 1 -->
                <LinearLayout
                    android:id="@+id/layout_date_1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:id="@+id/tv_day_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SAT"
                        android:textSize="12sp"
                        android:textColor="#999999"/>
                    <TextView
                        android:id="@+id/tv_date_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="22"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                </LinearLayout>

                <!-- Date 2 -->
                <LinearLayout
                    android:id="@+id/layout_date_2"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:id="@+id/tv_day_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SUN"
                        android:textSize="12sp"
                        android:textColor="#999999"/>
                    <TextView
                        android:id="@+id/tv_date_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="23"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                </LinearLayout>

                <!-- Date 3 (Today) -->
                <LinearLayout
                    android:id="@+id/layout_date_3"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:backgroundTint="#9C27B0"
                    android:elevation="4dp"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:id="@+id/tv_day_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MON"
                        android:textSize="12sp"
                        android:textColor="#FFFFFF"/>
                    <TextView
                        android:id="@+id/tv_date_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"/>
                    <!-- Alias ID for selected date logic -->
                    <View android:id="@+id/selected_date" android:layout_width="0dp" android:layout_height="0dp" android:visibility="gone"/>
                </LinearLayout>

                <!-- Date 4 -->
                <LinearLayout
                    android:id="@+id/layout_date_4"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="2dp"
                    android:layout_marginEnd="8dp">
                    <TextView
                        android:id="@+id/tv_day_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TUE"
                        android:textSize="12sp"
                        android:textColor="#999999"/>
                    <TextView
                        android:id="@+id/tv_date_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                </LinearLayout>

                <!-- Date 5 -->
                <LinearLayout
                    android:id="@+id/layout_date_5"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/button_background"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="2dp">
                    <TextView
                        android:id="@+id/tv_day_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WED"
                        android:textSize="12sp"
                        android:textColor="#999999"/>
                    <TextView
                        android:id="@+id/tv_date_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="26"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Profile Summary Card (Collapsible) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profile_summary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#F3E5F5">
                    
                    <TextView
                        android:id="@+id/tv_user_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#4A148C"/>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp"
                        android:weightSum="4">
                        <TextView android:id="@+id/tv_calorie_target" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" style="@style/TextAppearance.AppCompat.Caption"/>
                        <TextView android:id="@+id/tv_protein_target" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" style="@style/TextAppearance.AppCompat.Caption"/>
                        <TextView android:id="@+id/tv_carbs_target" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" style="@style/TextAppearance.AppCompat.Caption"/>
                        <TextView android:id="@+id/tv_fat_target" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" style="@style/TextAppearance.AppCompat.Caption"/>
                    </LinearLayout>
                    <TextView android:id="@+id/tv_explanation" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:textSize="12sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Generate Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_generate_plan"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginVertical="20dp"
                android:text="Generate My Meal Plan"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                app:backgroundTint="@null"
                app:cornerRadius="12dp"
                app:icon="@android:drawable/ic_menu_rotate"
                app:iconTint="#FFFFFF"
                android:elevation="4dp"/>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="#9C27B0"
                android:visibility="gone" />

            <!-- AI Recommendations Section -->
            <LinearLayout
                android:id="@+id/layoutAIRecommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âœ¨ Smart Suggestions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
            </LinearLayout>

            <!-- MEAL PLAN CONTAINER -->
            <LinearLayout
                android:id="@+id/meal_plan_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- 1. BREAKFAST CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Title Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            
                            <!-- Icon & Title -->
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_day"
                                app:tint="#FFA000"/>
                            
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Breakfast"
                                    android:textStyle="bold"
                                    android:textSize="16sp"
                                    android:textColor="#1A1A1A"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="08:00 AM"
                                    android:textSize="12sp"
                                    android:textColor="#9E9E9E"/>
                            </LinearLayout>

                            <!-- Calorie Badge -->
                            <TextView
                                android:id="@+id/tv_breakfast_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/button_background"
                                android:backgroundTint="#F3E5F5"
                                android:paddingHorizontal="12dp"
                                android:paddingVertical="6dp"
                                android:text="320 kcal"
                                android:textColor="#9C27B0"
                                android:textStyle="bold"
                                android:textSize="12sp"/>
                        </LinearLayout>

                        <!-- Food Name -->
                        <TextView
                            android:id="@+id/tv_breakfast_food_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Food Name"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <!-- Description -->
                        <TextView
                            android:id="@+id/tv_breakfast_foods"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Food description goes here..."
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:lineSpacingExtra="4dp"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#F0F0F0"
                            android:layout_marginVertical="12dp"/>

                        <!-- Macros Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            
                            <!-- Protein -->
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#2196F3" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_breakfast_protein" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="14g P" android:textSize="12sp" android:textColor="#666666" android:layout_marginEnd="16dp"/>

                            <!-- Carbs -->
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#9C27B0" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_breakfast_carbs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="28g C" android:textSize="12sp" android:textColor="#666666" android:layout_marginEnd="16dp"/>

                            <!-- Fat -->
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#FFC107" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_breakfast_fat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="18g F" android:textSize="12sp" android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 2. MORNING SNACK -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/btn_star" app:tint="#FF5722"/>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Morning Snack" android:textStyle="bold" android:textSize="16sp" android:textColor="#1A1A1A"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="11:00 AM" android:textSize="12sp" android:textColor="#9E9E9E"/>
                            </LinearLayout>
                            <TextView android:id="@+id/tv_morning_snack_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_background" android:backgroundTint="#F3E5F5" android:paddingHorizontal="12dp" android:paddingVertical="6dp" android:text="150 kcal" android:textColor="#9C27B0" android:textStyle="bold" android:textSize="12sp"/>
                        </LinearLayout>

                        <TextView android:id="@+id/tv_snack1_food_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Snack Name" android:textSize="16sp" android:textStyle="bold" android:textColor="#333333"/>
                        <TextView android:id="@+id/tv_morning_snack_foods" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Description..." android:textSize="14sp" android:textColor="#757575"/>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginVertical="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#2196F3" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_snack1_protein" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g P" android:textSize="12sp" android:textColor="#666666" android:layout_marginEnd="16dp"/>
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#9C27B0" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_snack1_carbs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g C" android:textSize="12sp" android:textColor="#666666" android:layout_marginEnd="16dp"/>
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#FFC107" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_snack1_fat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g F" android:textSize="12sp" android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 3. LUNCH -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/presence_online" app:tint="#FFC107"/>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Lunch" android:textStyle="bold" android:textSize="16sp" android:textColor="#1A1A1A"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="01:00 PM" android:textSize="12sp" android:textColor="#9E9E9E"/>
                            </LinearLayout>
                            <TextView android:id="@+id/tv_lunch_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_background" android:backgroundTint="#F3E5F5" android:paddingHorizontal="12dp" android:paddingVertical="6dp" android:text="450 kcal" android:textColor="#9C27B0" android:textStyle="bold" android:textSize="12sp"/>
                        </LinearLayout>

                        <TextView android:id="@+id/tv_lunch_food_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Lunch Name" android:textSize="16sp" android:textStyle="bold" android:textColor="#333333"/>
                        <TextView android:id="@+id/tv_lunch_foods" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Description..." android:textSize="14sp" android:textColor="#757575"/>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginVertical="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#2196F3" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_lunch_protein" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g P" android:textSize="12sp" android:textColor="#666666" android:layout_marginEnd="16dp"/>
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#9C27B0" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_lunch_carbs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g C" android:textSize="12sp" android:textColor="#666666" android:layout_marginEnd="16dp"/>
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#FFC107" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_lunch_fat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g F" android:textSize="12sp" android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 4. EVENING SNACK -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_gallery" app:tint="#FF9800"/>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Eve. Snack" android:textStyle="bold" android:textSize="16sp" android:textColor="#1A1A1A"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="05:00 PM" android:textSize="12sp" android:textColor="#9E9E9E"/>
                            </LinearLayout>
                            <TextView android:id="@+id/tv_evening_snack_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_background" android:backgroundTint="#F3E5F5" android:paddingHorizontal="12dp" android:paddingVertical="6dp" android:text="150 kcal" android:textColor="#9C27B0" android:textStyle="bold" android:textSize="12sp"/>
