                        <TextView android:id="@+id/tv_snack2_food_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Snack Name" android:textSize="16sp" android:textStyle="bold" android:textColor="#333333"/>
                        <TextView android:id="@+id/tv_evening_snack_foods" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Description..." android:textSize="14sp" android:textColor="#757575"/>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginVertical="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#2196F3" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_snack2_protein" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g P" android:textSize="12sp" android:textColor="#666666" android:layout_marginEnd="16dp"/>
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#9C27B0" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_snack2_carbs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g C" android:textSize="12sp" android:textColor="#666666" android:layout_marginEnd="16dp"/>
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#FFC107" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_snack2_fat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g F" android:textSize="12sp" android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 5. DINNER -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">
                            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_lock_idle_low_battery" app:tint="#3F51B5"/>
                            <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:orientation="vertical" android:layout_marginStart="12dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dinner" android:textStyle="bold" android:textSize="16sp" android:textColor="#1A1A1A"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="08:00 PM" android:textSize="12sp" android:textColor="#9E9E9E"/>
                            </LinearLayout>
                            <TextView android:id="@+id/tv_dinner_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_background" android:backgroundTint="#F3E5F5" android:paddingHorizontal="12dp" android:paddingVertical="6dp" android:text="450 kcal" android:textColor="#9C27B0" android:textStyle="bold" android:textSize="12sp"/>
                        </LinearLayout>

                        <TextView android:id="@+id/tv_dinner_food_name" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Dinner Name" android:textSize="16sp" android:textStyle="bold" android:textColor="#333333"/>
                        <TextView android:id="@+id/tv_dinner_foods" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:text="Description..." android:textSize="14sp" android:textColor="#757575"/>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginVertical="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#2196F3" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_dinner_protein" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g P" android:textSize="12sp" android:textColor="#666666" android:layout_marginEnd="16dp"/>
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#9C27B0" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_dinner_carbs" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g C" android:textSize="12sp" android:textColor="#666666" android:layout_marginEnd="16dp"/>
                            <ImageView android:layout_width="8dp" android:layout_height="8dp" android:src="@drawable/circle_dot" app:tint="#FFC107" android:layout_gravity="center_vertical" android:layout_marginEnd="6dp"/>
                            <TextView android:id="@+id/tv_dinner_fat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="0g F" android:textSize="12sp" android:textColor="#666666"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Total Summary -->
                <TextView
                    android:id="@+id/tv_total_summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_background"
                    android:backgroundTint="#EDE7F6"
                    android:padding="16dp"
                    android:text="Daily Summary"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_marginBottom="30dp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
