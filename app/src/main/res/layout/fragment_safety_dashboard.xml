<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvSafetyHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAFETY DASHBOARD"
            android:textSize="14sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="#888888"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Ghost Mode Indicator -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvGhostStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#F0F0FF"
            app:layout_constraintTop_toBottomOf="@id/tvSafetyHeader">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical">
                
                <ImageView
                    android:id="@+id/ivGhostIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_ghost"
                    app:tint="@color/purple_500" />
                    
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GHOST MODE"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#666666" />
                        
                    <TextView
                        android:id="@+id/tvGhostStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIVE"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/purple_500" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Emergency Contact Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cvContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cvGhostStatus">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">
                
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivContactPhoto"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_phone"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/purple_500"
                    app:shapeAppearanceOverlay="@style/CircleShapeAppearance"/>
                    
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:orientation="vertical">
                    
                    <TextView
                        android:id="@+id/tvContactName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Contact Selected"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                        
                    <TextView
                        android:id="@+id/tvContactPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tap to set emergency contact"
                        android:textSize="14sp"
                        android:textColor="#666666" />
                </LinearLayout>
                
                <ImageButton
                    android:id="@+id/btnEditContact"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_edit"
                    app:tint="#888888" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Status Texts -->
        <LinearLayout
            android:id="@+id/llStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/cvContact">
            
            <TextView
                android:id="@+id/tvSharingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â— Live Location Sharing: ENABLED"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:textSize="14sp" />
                
            <TextView
                android:id="@+id/tvSafetyMonitorStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Monitoring your movement..."
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Large SOS Button -->
        <FrameLayout
            android:id="@+id/flSOSContainer"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@id/llStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            
            <ProgressBar
                android:id="@+id/pbSOSHold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/sos_progress_drawable"
                android:max="3000"
                android:progress="0"
                android:indeterminate="false" />
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSOS"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:text="SOS"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                app:backgroundTint="#FF5252"
                app:cornerRadius="80dp"
                app:elevation="8dp" />
        </FrameLayout>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="HOLD TO ACTIVATE SOS"
            android:textColor="#888888"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/flSOSContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
