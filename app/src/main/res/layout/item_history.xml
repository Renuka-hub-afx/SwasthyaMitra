<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="12dp"
    android:paddingHorizontal="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/iconCard"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        android:backgroundTint="#F0F0FF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ðŸ‹ï¸"
            android:textSize="18sp"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvHistoryTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Full Body Workout"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#333366"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/iconCard"
        app:layout_constraintStart_toEndOf="@id/iconCard"
        app:layout_constraintEnd_toStartOf="@id/tvHistoryDate" />

    <TextView
        android:id="@+id/tvHistoryDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45 min â€¢ 320 kcal"
        android:textSize="12sp"
        android:textColor="#AAAAEE"
        app:layout_constraintTop_toBottomOf="@id/tvHistoryTitle"
        app:layout_constraintStart_toStartOf="@id/tvHistoryTitle" />

    <TextView
        android:id="@+id/tvHistoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mon, Jun 12"
        android:textSize="11sp"
        android:textStyle="bold"
        android:textColor="#C0C0D0"
        app:layout_constraintTop_toTopOf="@id/tvHistoryTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F8F8FF"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvHistoryDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>
