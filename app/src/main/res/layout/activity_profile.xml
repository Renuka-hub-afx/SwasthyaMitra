<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="80dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="#80FFFFFF"
            android:padding="8dp"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#4A4A4A" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="#1D1617"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintEnd_toStartOf="@id/btnSettings"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/circular_background"
            android:backgroundTint="#80FFFFFF"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_preferences"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#4A4A4A" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#80FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tvTitle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp">

                    <FrameLayout
                        android:id="@+id/avatarContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/circular_background"
                        android:backgroundTint="#FFFFFF"
                        android:clickable="true"
                        android:focusable="true">
                    </FrameLayout>
                    
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/circular_background"
                        android:backgroundTint="#9C27B0"
                        android:padding="4dp"
                        android:src="@android:drawable/ic_menu_camera"
                        app:tint="#FFFFFF"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="stash"
                    android:textColor="#1D1617"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/userEmailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="stash@gmail.com"
                    android:textColor="#7B6F72"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvPersonalInfoHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:drawablePadding="8dp"
            android:text="ðŸ“‹ Personal Information"
            android:textColor="#1D1617"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardProfile" />

        <LinearLayout
            android:id="@+id/layoutInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_white_background"
            android:orientation="vertical"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvPersonalInfoHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Age"
                    android:textColor="#7B6F72" />
                <TextView
                    android:id="@+id/userAgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23 years"
                    android:textColor="#1D1617"
                    android:textStyle="bold" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Gender"
                    android:textColor="#7B6F72" />
                <TextView
                    android:id="@+id/userGenderText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="#1D1617"
                    android:textStyle="bold" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Height"
                    android:textColor="#7B6F72" />
                <TextView
                    android:id="@+id/userHeightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="179.0 cm"
                    android:textColor="#1D1617"
                    android:textStyle="bold" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Current Weight"
                    android:textColor="#7B6F72" />
                <TextView
                    android:id="@+id/userWeightText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85.0 kg"
                    android:textColor="#1D1617"
                    android:textStyle="bold" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BMI"
                    android:textColor="#7B6F72" />
                <TextView
                    android:id="@+id/userBmiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_pill_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:text="26.5"
                    android:textColor="#1D1617"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Activity Level"
                    android:textColor="#7B6F72" />
                <TextView
                    android:id="@+id/activityLevelText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moderately Active"
                    android:textColor="#1D1617"
                    android:textStyle="bold" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BMR"
                    android:textColor="#7B6F72" />
                <TextView
                    android:id="@+id/bmrText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1804 kcal"
                    android:textColor="#1D1617"
                    android:textStyle="bold" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TDEE"
                    android:textColor="#7B6F72" />
                <TextView
                    android:id="@+id/tdeeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2881 kcal"
                    android:textColor="#1D1617"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tvGoalsHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:drawablePadding="8dp"
            android:text="ðŸŽ¯ Health Goals"
            android:textColor="#1D1617"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutInfo" />

        <TextView
            android:id="@+id/tvUpdatedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="UPDATED 2 DAYS AGO"
            android:textColor="#7B6F72"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="@id/tvGoalsHeader"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvGoalsHeader" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutGoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_white_background"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/tvGoalsHeader">

            <TextView
                android:id="@+id/lblGoalWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal Weight"
                android:textColor="#7B6F72"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/goalWeightText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="80 kg"
                android:textColor="#9C27B0"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblGoalWeight" />

            <ImageView
                android:id="@+id/editGoalWeightButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circular_background"
                android:backgroundTint="#F0E5F5"
                android:padding="6dp"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#9C27B0" />

            <TextView
                android:id="@+id/lblCalorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Daily Calorie Goal"
                android:textColor="#7B6F72"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/goalWeightText" />

            <TextView
                android:id="@+id/goalCaloriesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2381 kcal"
                android:textColor="#9C27B0"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lblCalorie" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/editProfileButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_background"
            android:text="âœï¸ Edit Profile"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:backgroundTint="@null"
            app:cornerRadius="12dp"
            android:stateListAnimator="@null"
            app:layout_constraintTop_toBottomOf="@id/layoutGoals" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:text="ðŸšª Logout"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:backgroundTint="@null"
            app:cornerRadius="12dp"
            android:stateListAnimator="@null"
            app:layout_constraintTop_toBottomOf="@id/editProfileButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
