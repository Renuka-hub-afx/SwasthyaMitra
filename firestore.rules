rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==================== HELPER FUNCTIONS ====================

    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Checks if the user owns the existing resource
    function ownsResource() {
      return isAuthenticated() && (resource == null || resource.data.userId == request.auth.uid);
    }
    
    // Checks if the user will own the incoming resource
    function willOwnResource() {
      return isAuthenticated() && request.resource.data.userId == request.auth.uid;
    }

    // ==================== USERS COLLECTION ====================
    // Main user profile - only owner can access
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Nested subcollections (mood_logs, foodLogs, weightLogs, recipes, etc.)
      match /{allSubcollections=**} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // ==================== TOP-LEVEL COLLECTIONS ====================
    // These collections use a userId field for ownership
    
    // Goals
    match /goals/{goalId} {
      allow read: if ownsResource();
      allow create: if willOwnResource();
      allow update: if ownsResource() && willOwnResource();
      allow delete: if ownsResource();
    }
    
    // Logs (Water, Weight, Exercise)
    match /waterLogs/{logId} {
      allow read, create, update, delete: if ownsResource() || willOwnResource();
    }

    match /weightLogs/{logId} {
      allow read, create, update, delete: if ownsResource() || willOwnResource();
    }
    
    match /exercise_logs/{logId} {
      allow read, create, update, delete: if ownsResource() || willOwnResource();
    }
    
    match /exerciseLogs/{logId} {
      allow read, create, update, delete: if ownsResource() || willOwnResource();
    }
    
    // AI Related Data
    match /ai_generated_plans/{planId} {
      allow read, create, update, delete: if ownsResource() || willOwnResource();
    }
    
    match /meal_feedback/{feedbackId} {
      allow read, create, update, delete: if ownsResource() || willOwnResource();
    }
    
    match /user_preferences/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Social & Gamification
    match /notifications/{notifId} {
      allow read, create, update, delete: if ownsResource() || willOwnResource();
    }
    
    match /challenges/{challengeId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        resource == null ||
        resource.data.creatorId == request.auth.uid ||
        resource.data.opponentId == request.auth.uid ||
        resource.data.opponentId == ""
      );
      allow delete: if isAuthenticated() && resource.data.creatorId == request.auth.uid;
    }

    // Global Data (Read-only for users)
    match /workouts/{workoutId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    match /festivalCalendar/{eventId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // ==================== DEFAULT DENY ====================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
