rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== HELPER FUNCTIONS ====================
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function ownsResource() {
      return isAuthenticated() && resource != null && resource.data.userId == request.auth.uid;
    }

    function willOwnResource() {
      return isAuthenticated() && request.resource != null && request.resource.data.userId == request.auth.uid;
    }

    // Validation helpers
    function isValidStepCount(steps) {
      return steps is int && steps >= 0 && steps <= 100000;
    }

    function isValidCalories(calories) {
      return calories is number && calories >= 0 && calories <= 10000;
    }

    function isValidDate(date) {
      return date is string && date.matches('^[0-9]{4}-[0-9]{2}-[0-9]{2}$');
    }

    // ==================== MAIN USER COLLECTION ====================
    // All user data MUST be nested under /users/{userId}
    match /users/{userId} {
      // User can read and write their own profile
      allow read, write: if isOwner(userId);

      // User goals subcollection
      match /goals/{goalId} {
        allow read, write: if isOwner(userId);
      }

      // PHASE 1.1: Daily Steps Collection (NEW - Hybrid Step Counter)
      // Stores daily step counts from hardware sensor with validation
      match /daily_steps/{date} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) &&
                        willOwnResource() &&
                        isValidStepCount(request.resource.data.steps) &&
                        isValidDate(date);
        allow update: if isOwner(userId) &&
                        ownsResource() &&
                        isValidStepCount(request.resource.data.steps);
        allow delete: if isOwner(userId);
      }

      // Step data (real-time tracking) - Alternative structure
      match /step_data/{dataId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && willOwnResource();
        allow update, delete: if isOwner(userId) && ownsResource();
      }

      // Food intake logs (7+ days history)
      match /foodLogs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) && willOwnResource();
        allow update, delete: if isOwner(userId) && ownsResource();
      }

      // Water/hydration logs
      match /waterLogs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // Hydration logs (alternative naming)
      match /hydration_logs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // Exercise logs (AI + Manual) - PHASE 1: Enhanced with AI exercise tracking
      match /exercise_logs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) &&
                        willOwnResource() &&
                        request.resource.data.caloriesBurned >= 0;
        allow update, delete: if isOwner(userId) && ownsResource();
      }

      // Weight tracking logs
      match /weightLogs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId) &&
                        request.resource.data.weightKg > 0 &&
                        request.resource.data.weightKg < 500;
        allow update, delete: if isOwner(userId);
      }

      // Sleep logs - Enhanced with sleep cycle tracking
      match /sleep_logs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // Meal feedback for AI learning
      match /meal_feedback/{feedbackId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // User dietary preferences
      match /user_preferences/{preferenceId} {
        allow read, write: if isOwner(userId);
      }

      // Health metrics (BP, heart rate, glucose, etc.)
      match /health_metrics/{metricId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // Workout plans and sessions
      match /workouts/{workoutId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // Lifestyle data
      match /lifestyle/{lifestyleId} {
        allow read, write: if isOwner(userId);
      }

      // Mood tracking
      match /mood_logs/{moodId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // Progress tracking and analytics
      match /progress/{progressId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // Streaks and gamification data
      match /streaks/{streakId} {
        allow read, write: if isOwner(userId);
      }

      // User-specific challenges
      match /challenges/{challengeId} {
        allow read, write: if isOwner(userId);
      }

      // Safety contacts for Ghost Mode
      match /safety_contacts/{contactId} {
        allow read, write: if isOwner(userId);
      }

      // Menstrual cycle tracking
      match /period_logs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // AI Recommendations (user-specific)
      match /recommendations/{recommendationId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // Activity logs from auto-tracking
      match /activity_logs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // Calorie balance tracking
      match /calorie_logs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // GPS tracking logs (Ghost Mode safety tracking)
      match /gps_logs/{logId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // SOS/Emergency alerts
      match /sos_alerts/{alertId} {
        allow read: if isOwner(userId);
        allow create: if isOwner(userId);
        allow update, delete: if isOwner(userId);
      }

      // RECURSIVE WILDCARD: Allows access to ANY future subcollections
      // This ensures new features work without rule updates
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // ==================== ROOT LEVEL COLLECTIONS ====================

    // Global AI Recommendations (shared templates)
    match /global_recommendations/{recommendationId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin/cloud functions
    }

    // Festival Calendar (Global Read-Only)
    match /festivalCalendar/{eventId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins via Firebase Console/Cloud Functions
    }

    // Food database (for barcode scanning and search)
    match /foodDatabase/{foodId} {
      allow read: if isAuthenticated();
      allow write: if false; // Populated by admin/Cloud Functions
    }

    // Exercise database (for AI recommendations)
    match /exerciseDatabase/{exerciseId} {
      allow read: if isAuthenticated();
      allow write: if false; // Populated by admin/Cloud Functions
    }

    // Recipe database (for AI meal planning)
    match /recipeDatabase/{recipeId} {
      allow read: if isAuthenticated();
      allow write: if false; // Populated by admin/Cloud Functions
    }

    // Supplement database
    match /supplementDatabase/{supplementId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Health tips and insights
    match /healthTips/{tipId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Workout templates (global library)
    match /workoutTemplates/{templateId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // ==================== DENY ALL OTHER PATHS ====================
    // Explicitly deny access to any other collections not listed above
    // This prevents accidental writes to root-level collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
